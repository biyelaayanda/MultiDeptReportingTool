        private DateTime CalculateNextRun(string frequency)
        {
            var now = DateTime.UtcNow;
            
            return frequency.ToLower() switch
            {
                "daily" => now.AddDays(1),
                "weekly" => now.AddDays(7),
                "monthly" => now.AddMonths(1),
                "quarterly" => now.AddMonths(3),
                "yearly" => now.AddYears(1),
                _ => now.AddDays(1)
            };
        }

